<div class="container mt-4">
  <div class="card mb-3">
    <div class="card-header">
      <h3>Create a new Question</h3>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col">
          {{#with error}}
            <div class="alert alert-danger" role="alert">
              {{this}}
            </div>
          {{/with}}
          {{#with success}}
            <div class="alert alert-success" role="alert">
              {{this}}
            </div>
          {{/with}}
          <form method="POST" action="/create-question" enctype="multipart/form-data">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" name="title" placeholder="Put a title" required>
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <textarea class="form-control" id="description" name="description" placeholder="Put a description"
                required></textarea>
            </div>
            <div class="text-center mt-5">
              <button type="submit" class="btn btn-primary">Make Question</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
